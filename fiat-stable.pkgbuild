pkgname=fiat
pkgver=0.9.9
pkgrel=1
pkgdesc="Supports generation of arbitrary order instances of the Lagrange elements on lines, triangles, and tetrahedra."
arch=(any)
url="http://launchpad.net/fiat"
license=('GPL')
groups=('fenics')
depends=('python2' 'scons' 'python-scientific')
options=(!emptydirs)
source=($url/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('62fd06a9a28537b4f73a98f345f91db6')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  find ${srcdir} -name "*" -type f -exec \
      sed -i 's#\(/usr/bin/env \|/usr/bin/\)python[2-3]*#\1python2#' {} \;
  python2 setup.py install --prefix=/usr --root="$pkgdir"
}
